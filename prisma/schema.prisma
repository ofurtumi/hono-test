generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model riddles {
  id        Int        @id @default(autoincrement())
  question  String
  answer    String
}

model images {
    id      Int       @id @default(autoincrement())
    name    String    @unique @default(autoincrement())
    url     String
  }
